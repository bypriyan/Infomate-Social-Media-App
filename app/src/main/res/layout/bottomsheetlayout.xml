<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sh">

    <View
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_3sdp"
        android:background="@color/green"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_18sdp">
    </View>

    <LinearLayout
        android:id="@+id/ExamAlert"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="8dp">


        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:tint="@color/lite_greay"
            android:src="@drawable/ic_notifications"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Exam Alert"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/_14ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/website"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="8dp">


        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:tint="@color/lite_greay"
            android:src="@drawable/ic_website"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="website"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/_14ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contectUs"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="8dp">


        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:tint="@color/lite_greay"
            android:src="@drawable/ic_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contect us"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/_14ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/privacyPolicy"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="8dp">


        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:tint="@color/dark_greay"
            android:src="@drawable/ic_lock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="privacy policy"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/lite_greay"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/termsCondition"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="8dp">


        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:tint="@color/dark_greay"
            android:src="@drawable/ic_user"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/lite_greay"/>

    </LinearLayout>


</LinearLayout>