<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.ThereProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/white"
                android:layout_marginLeft="@dimen/_15sdp"
                android:src="@drawable/ic_back">

            </ImageView>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:layout_below="@+id/toolbar"
            android:id="@+id/imageProfileBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:scaleType="centerCrop">
        </ImageView>
        <ImageView
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:scaleType="centerCrop"
            android:background="#79000000">
        </ImageView>

        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:id="@+id/pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageProfile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_gravity="center"
                app:riv_border_width="@dimen/_3sdp"
                app:riv_border_color="@color/lite_greay"
                android:background="@drawable/background_icon"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_8sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_sh"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16sdp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/app_name"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lite_greay"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/app_name"/>

                <TextView
                    android:id="@+id/branch"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lite_greay"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="@string/app_name"/>

            </LinearLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ProfilepostRecyclear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageProfileBg"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</ScrollView>